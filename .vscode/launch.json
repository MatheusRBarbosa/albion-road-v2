    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/AlbionRoad.API/bin/Debug/net6.0/AlbionRoad.API.dll",
            "args": [],
            "cwd": "${workspaceFolder}/AlbionRoad.API",
            "stopAtEntry": false,
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "http://localhost:5000/"
            }
        }
    ]
}